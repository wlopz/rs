<tr>
  <td><%= link_to blog.title, authors_blog_path(blog) %></td>
  <td></td>
  <% if blog.published? %>
      <td><%= link_to 'Unpublish', unpublish_authors_blog_path(blog), method: :put, class: 'btn btn-sm btn-danger' %></td>
  <% else %>
      <td><%= link_to 'Publish', publish_authors_blog_path(blog), method: :put, class: 'btn btn-sm btn-success' %></td>
  <% end %>
  <td><%= link_to 'Edit', edit_authors_blog_path(blog), class: 'btn btn-sm btn-warning' %></td>
  <td><%= link_to 'Remove', authors_blog_path(blog), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger' %></td>
</tr>